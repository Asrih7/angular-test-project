{
  "compilerOptions": {
    "target": "ES6", // or specify the target version you prefer
    "module": "commonjs",
    "outDir": "./dist", // output directory for transpiled JavaScript files
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*.ts" // path to your TypeScript files
  ],
  "exclude": [
    "node_modules" // exclude node_modules directory
  ]
}
